<NetflixUserScreen>:
    name: "netflixuserscreen"

    MDFloatLayout:

        MDBottomNavigation:
            panel_color: "#E0E0E0"
            text_color_active: "#080808"
            use_text: False

            MDBottomNavigationItem:
                name: "netflixmainscreen"
                md_bg_color: "#080808"
                text: "main"
                icon: "home"

                MDLabel:
                    text: "General info about"
                    font_size: root.height * 0.045
                    pos_hint: {"center_x": 0.5, "center_y": 0.8}
                    halign: "center"
                    color: "#E0E0E0"
                    bold: True

                MDLabel:
                    text: "your viewing history"
                    font_size: root.height * 0.025
                    pos_hint: {"center_x": 0.5, "center_y": 0.75}
                    halign: "center"
                    color: "#E0E0E0"

                MDCard:
                    size_hint: 0.8, 0.2
                    pos_hint: {"center_x": 0.5, "center_y": 0.45}
                    md_bg_color: "#A7F500"

                    BoxLayout:
                        orientation: "vertical"

                        MDBoxLayout:
                            size_hint_y: 0.25

                        MDBoxLayout:
                            size_hint_y: 0.5
                            orientation: "vertical"
                            MDLabel:
                                text: "Total movies watched"
                                font_size: root.height * 0.03
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                halign: "center"

                            MDLabel:
                                id: total_movies
                                text: ""
                                font_size: root.height * 0.025
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                halign: "center"

                        MDBoxLayout:
                            size_hint_y: 0.25

                MDCard:
                    size_hint: 0.8, 0.2
                    pos_hint: {"center_x": 0.5, "center_y": 0.2}
                    line_color: "#A7F500"
                    line_width: 1.0
                    md_bg_color: "#080808"

                    MDBoxLayout:
                        orientation: "vertical"

                        MDBoxLayout:
                            size_hint_y: 0.25

                        MDBoxLayout:
                            size_hint_y: 0.5
                            orientation: "vertical"
                            MDLabel:
                                text: "Total series watched"
                                color: "#A7F500"
                                font_size: root.height * 0.03
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                halign: "center"

                            MDLabel:
                                id: total_series
                                text: ""
                                color: "#A7F500"
                                font_size: root.height * 0.025
                                pos_hint: {"center_x": 0.5, "center_y": 0.4}
                                halign: "center"

                        MDBoxLayout:
                            size_hint_y: 0.25


            MDBottomNavigationItem:
                md_bg_color: "#080808"
                text: "History"
                icon: "history"
                id: netflixhistoryscreen

                MDScrollView:
                    MDGridLayout:
                        id: historylist
                        cols: 1
                        padding: 20
                        spacing: 20
                        size_hint_y: None

                        MDLabel:
                            text: "Your viewing history"
                            theme_text_color: "Custom"
                            text_color: "#E0E0E0"
                            font_style: "H6"
                            halign: "center"
                            bold: True
                            size_hint_y: None
                            height: dp(60)

                        MDTextField:
                            id: textfield
                            hint_text: "Search"
                            icon_right: "magnify"
                            mode: "rectangle"
                            line_color_normal: "#E0E0E0"
                            line_color_focus: "#A7F500"
                            hint_text_color_normal: "#E0E0E0"
                            hint_text_color_focus: "#A7F500"
                            text_color_normal: "#E0E0E0"
                            text_color_focus: "#A7F500"
                            icon_right_color_normal: "#E0E0E0"
                            icon_right_color_focus: "#A7F500"

                        MDRaisedButton:
                            text: "Search film or series"
                            size_hint: 1, None
                            height: root.height * 0.08
                            md_bg_color: "#A7F500"
                            text_color: "#080808"
                            on_release: root.search_history()


            MDBottomNavigationItem:
                name: "netflixchartsscreen"
                md_bg_color: "#080808"
                text: "Charts"
                icon: "chart-line"

                MDBoxLayout:
                    id: genres_chart
                    size_hint_y: 1
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint_x: None
                    width: 0.8 * root.width
                
                MDBoxLayout:
                    id: movies_series_chart
                    size_hint_y: 0.0001
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint_x: None
                    width: 0.8 * root.width

                MDBoxLayout:
                    id: watch_count_chart
                    size_hint_y: 0.0001
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint_x: None
                    width: 0.8 * root.width

                MDBoxLayout:
                    id: years_chart
                    size_hint_y: 0.0001
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint_x: None
                    width: 0.8 * root.width

                MDBoxLayout:
                    id: time_at_series
                    size_hint_y: 0.0001
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint_x: None
                    width: 0.8 * root.width

                MDFloatingActionButton:
                    icon: "chevron-right"
                    md_bg_color: "#080808"
                    pos_hint: {"center_x": 0.9, "center_y": 0.1}
                    theme_icon_color: "Custom"
                    icon_color: "#E0E0E0"
                    on_release: root.change_chart()
                    

            MDBottomNavigationItem:
                name: "netflixtoplistscreen"
                md_bg_color: "#080808"
                text: "Top List"
                icon: "arrow-top-right"

                MDScrollView:
                    size_hint: 1, 1
                    pos_hint: {"center_x": .5, "center_y": .5}

                    MDList:
                        id: netflixtoplistscreen
                        divider_color: "#E0E0E0"
                        divider: "Full"
                        spacing: dp(10)
                        padding: dp(20)

                        OneLineListItem:
                            height: root.height * 0.08
                            MDCard:
                                # size_hint: 0.8, 0.8
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                line_color: "#A7F500"
                                line_width: 1.0
                                md_bg_color: "#080808"

                                MDBoxLayout:
                                    orientation: "vertical"

                                    MDLabel:
                                        text: "Top actors"
                                        color: "#A7F500"
                                        font_size: root.height * 0.03
                                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                        halign: "center"

                        MDWidget:
                            height: root.height * 0.5

                        OneLineListItem:
                            height: root.height * 0.08
                            MDCard:
                                # size_hint: 0.8, 0.8
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                md_bg_color: "#A7F500"

                                MDBoxLayout:
                                    orientation: "vertical"

                                    MDLabel:
                                        text: "Top genres"
                                        font_size: root.height * 0.03
                                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                        halign: "center"

                        MDWidget:
                            height: root.height * 0.05

                        OneLineListItem:
                            height: root.height * 0.08
                            MDCard:
                                # size_hint: 0.8, 0.8
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                line_color: "#A7F500"
                                line_width: 1.0
                                md_bg_color: "#080808"

                                MDBoxLayout:
                                    orientation: "vertical"

                                    MDLabel:
                                        text: "Top series"
                                        color: "#A7F500"
                                        font_size: root.height * 0.03
                                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                        halign: "center"

                        MDWidget:
                            height: root.height * 0.05

                        OneLineListItem:
                            height: root.height * 0.08
                            MDCard:
                                # size_hint: 0.8, 0.8
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                md_bg_color: "#A7F500"

                                MDBoxLayout:
                                    orientation: "vertical"

                                    MDLabel:
                                        text: "Most popular watched"
                                        font_size: root.height * 0.03
                                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                        halign: "center"

                        MDWidget:
                            height: root.height * 0.5

                        OneLineListItem:
                            height: root.height * 0.08
                            MDCard:
                                # size_hint: 0.8, 0.8
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                line_color: "#A7F500"
                                line_width: 1.0
                                md_bg_color: "#080808"

                                MDBoxLayout:
                                    orientation: "vertical"

                                    MDLabel:
                                        text: "Top watched by day"
                                        color: "#A7F500"
                                        font_size: root.height * 0.03
                                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                        halign: "center"

                        MDWidget:
                            height: root.height * 0.5


<CustomOneLineListItem>:
    text_color: "#E0E0E0"
    theme_text_color: "Custom"
    font_style: "Subtitle1"

<CustomTwoLineListItem>:
    text_color: "#E0E0E0"
    theme_text_color: "Custom"
    font_style: "H6"
    secondary_theme_text_color: "Custom"
    secondary_text_color: "#A7F500"
    secondary_font_style: "Caption"

<CustomButton>:
    md_bg_color: "#080808"
    on_release: root.show_bigger(one_text.text, two_text.text)
    orientation: "vertical"

    MDLabel:
        id: one_text
        text: ""
        color: "#A7F500"

    MDLabel:
        text: ""
        color: "#E0E0E0"

    MDLabel:
        id: two_text
        text: ""
        color: "#E0E0E0"

<CustomThreeLineListItem>:
    theme_text_color: "Custom"
    secondary_theme_text_color: "Custom"
    tertiary_theme_text_color: "Custom"
    text_color: "#A7F500"
    secondary_text_color: "#E0E0E0"
    tertiary_text_color: "#E0E0E0"
    secondary_font_style: "Caption"
    tertiary_font_style: "Caption"