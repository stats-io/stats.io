<SpotifyUserScreen>:
    name: "spotifyuserscreen"

    MDFloatLayout:

        MDBottomNavigation:
            panel_color: "#E0E0E0"
            text_color_active: "#080808"
            use_text: False

            MDBottomNavigationItem:
                name: "spotifymainscreen"
                md_bg_color: "#080808"
                text: "main"
                icon: "home"

                MDLabel:
                    text: "Some random\n recommendations"
                    color: "#A7F500"
                    pos_hint: {"center_x": 0.5, "center_y": 0.95}
                    font_size: root.height * 0.025
                    halign: "center"

                MDBoxLayout:
                    id: spotifymainscreen
                    orientation: "vertical"
                    size_hint: 1, 0.9
                    padding: dp(10)
                    spacing: dp(20)

            MDBottomNavigationItem:
                name: "spotifyhistoryscreen"
                md_bg_color: "#080808"
                text: "History"
                icon: "history"

                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        id: top_app_bar
                        title: "Change to detailed history"
                        headline_text: "Bar"
                        size_hint_y: None
                        right_action_items: [["chevron-right", lambda x: root.history_screen_handler()]]
                        md_bg_color: "#E0E0E0"
                        specific_text_color: "#080808"
                    MDScrollView:
                        id: scrollview
                        size_hint: 1, 1
                        pos_hint: {"center_x": .5, "center_y": .5}

            MDBottomNavigationItem:
                name: "spotifytoplistscreen"
                md_bg_color: "#080808"
                text: "Top List"
                icon: "arrow-top-right"

                MDScrollView:
                    size_hint: 1, 1
                    pos_hint: {"center_x": .5, "center_y": .5}

                    MDList:
                        id: spotifytoplistscreen
                        divider_color: "#E0E0E0"
                        divider: "Full"
                        spacing: dp(10)
                        padding: dp(20)

                        OneLineListItem:
                            height: root.height * 0.08
                            MDCard:
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                line_color: "#A7F500"
                                line_width: 1.0
                                md_bg_color: "#080808"

                                MDBoxLayout:
                                    orientation: "vertical"

                                    MDLabel:
                                        id: top_tracks
                                        text: "Top tracks"
                                        color: "#A7F500"
                                        font_size: root.height * 0.03
                                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                        halign: "center"

                        OneLineListItem:
                            height: root.height * 0.08
                            MDCard:
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                md_bg_color: "#A7F500"

                                MDBoxLayout:
                                    orientation: "vertical"

                                    MDLabel:
                                        id: top_artists
                                        text: "Top artists"
                                        font_size: root.height * 0.03
                                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                        halign: "center"

                        OneLineListItem:
                            height: root.height * 0.08
                            MDCard:
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                line_color: "#A7F500"
                                line_width: 1.0
                                md_bg_color: "#080808"

                                MDBoxLayout:
                                    orientation: "vertical"

                                    MDLabel:
                                        id: recommendations
                                        text: "Recommendations"
                                        color: "#A7F500"
                                        font_size: root.height * 0.03
                                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                        halign: "center"

<CustomOneLineListItem>:
    text_color: "#E0E0E0"
    theme_text_color: "Custom"
    font_style: "H6"

<CustomMoreListItem>:
    id: more
    text_color: "#E0E0E0"
    theme_text_color: "Custom"
    font_style: "H6"

<CustomTwoLineListItem>:
    text_color: "#E0E0E0"
    theme_text_color: "Custom"
    font_style: "H6"
    secondary_theme_text_color: "Custom"
    secondary_text_color: "#A7F500"
    secondary_font_style: "Caption"

<CustomThreeLineListItem>:
    theme_text_color: "Custom"
    secondary_theme_text_color: "Custom"
    tertiary_theme_text_color: "Custom"
    text_color: "#E0E0E0"
    secondary_text_color: "#A7F500"
    tertiary_text_color: "#E0E0E0"
    secondary_font_style: "Caption"
    tertiary_font_style: "Caption"

<MoreButton>:
    md_bg_color: "#080808"
    orientation: "vertical"

    MDLabel:
        id: one_text
        text: ""
        color: "#A7F500"

<CustomMDCard>:
    size_hint: 0.8, 0.1
    md_bg_color: "#080808"
    line_color: "#A7F500"
    line_width: 1.0

    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, 1
        padding: dp(10)
        spacing: dp(20)

        AsyncImage:
            id: image_url
            source: ""
            halign: "left"
            pos_hint: {"center_x": 0.2, "center_y": 0.5}

        MDBoxLayout:
            orientation: "vertical"
            size_hint: 1, 1
            padding: dp(25)
            spacing: dp(20)

            MDLabel:
                id: title_name
                text: ""
                color: "#E0E0E0"
                pos_hint: {"center_y": 0.5}
                font_size: root.height * 0.10
                halign: "left"

            MDLabel:
                id: artist_name
                text: ""
                color: "#E0E0E0"
                pos_hint: {"center_y": 0.5}
                font_size: root.height * 0.10
                halign: "left"

<CustomMDLabel>:
    text: "Your listening history"
    theme_text_color: "Custom"
    text_color: "#E0E0E0"
    font_style: "H6"
    halign: "center"
    bold: True
    size_hint_y: None
    height: dp(60)

<CustomMDTextField>:
    id: textfield
    hint_text: "Search"
    icon_right: "magnify"
    mode: "rectangle"
    line_color_normal: "#E0E0E0"
    line_color_focus: "#A7F500"
    hint_text_color_normal: "#E0E0E0"
    hint_text_color_focus: "#A7F500"
    text_color_normal: "#E0E0E0"
    text_color_focus: "#A7F500"
    icon_right_color_normal: "#E0E0E0"
    icon_right_color_focus: "#A7F500"

<CustomMDRaisedButton>:
    text: "Search film or series"
    size_hint: 1, None
    height: dp(80)
    md_bg_color: "#A7F500"
    text_color: "#080808"